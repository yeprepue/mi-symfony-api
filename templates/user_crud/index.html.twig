{% extends 'base.html.twig' %}

{% block title %}Lista de Usuarios - Time Manager{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people"></i> Lista de Usuarios</h1>
        <a href="{{ path('user_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Usuario
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Tareas</th>
                        <th>Proyectos</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td><strong>{{ user.email }}</strong></td>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge bg-{{ role == 'ROLE_ADMIN' ? 'danger' : 'primary' }}">
                                        {{ role }}
                                    </span>
                                {% endfor %}
                            </td>
                            <td><span class="badge bg-secondary">{{ user.tasks|length }}</span></td>
                            <td><span class="badge bg-info">{{ user.userProjects|length }}</span></td>
                            <td>
                                <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button type="button" class="btn btn-sm btn-danger btn-delete-swal" data-item-name="el usuario '{{ user.email|e('html_attr') }}'">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted">No hay usuarios registrados</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
