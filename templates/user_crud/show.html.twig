{% extends 'base.html.twig' %}

{% block title %}Ver Usuario - Time Manager{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header header-gradient">
                    <h3><i class="bi bi-eye"></i> Detalles del Usuario</h3>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th class="text-muted">ID:</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Email:</th>
                            <td><strong>{{ user.email }}</strong></td>
                        </tr>
                        <tr>
                            <th class="text-muted">Roles:</th>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge bg-{{ role == 'ROLE_ADMIN' ? 'danger' : 'primary' }}">
                                        {{ role }}
                                    </span>
                                {% endfor %}
                            </td>
                        </tr>
                        <tr>
                            <th class="text-muted">Tareas:</th>
                            <td><span class="badge bg-secondary">{{ user.tasks|length }}</span></td>
                        </tr>
                        <tr>
                            <th class="text-muted">Proyectos:</th>
                            <td><span class="badge bg-info">{{ user.userProjects|length }}</span></td>
                        </tr>
                    </table>
                    
                    <div class="mt-4 d-flex justify-content-between">
                        <a href="{{ path('user_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                        <div>
                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar este usuario?')">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
