{% extends 'base.html.twig' %}

{# Manejo seguro del nombre de usuario #}
{% set user_display_name = user.email|default('Usuario') %}
{% if user.name is defined %}{% set user_display_name = user.name %}{% endif %}
{% if user.username is defined %}{% set user_display_name = user.username %}{% endif %}

{% block title %}Tareas de {{ user_display_name }}{% endblock %}

{% block body %}
<div class="container py-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>ðŸ“‹ Tareas de {{ user_display_name }}</h1>
            {% if user.email is defined and user.email %}
                <p class="text-muted">
                    <i class="fas fa-envelope"></i> {{ user.email }}
                </p>
            {% endif %}
        </div>
        <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>

    <!-- Tarjetas de resumen -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h6 class="card-title">Total Horas</h6>
                    <h3 class="mb-0">{{ total_hours|default(0)|number_format(1) }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h6 class="card-title">Valor Total</h6>
                    <h3 class="mb-0">${{ total_value|default(0)|number_format(2) }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h6 class="card-title">Total Tareas</h6>
                    <h3 class="mb-0">{{ tasks|length }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h6 class="card-title">Promedio/Hora</h6>
                    <h3 class="mb-0">
                        {% if total_hours > 0 %}
                            ${{ (total_value / total_hours)|number_format(2) }}
                        {% else %}
                            $0.00
                        {% endif %}
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de tareas -->
    <div class="card shadow">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-list"></i> Lista de Tareas
                <span class="badge bg-primary ms-2">{{ tasks|length }}</span>
            </h5>
        </div>
        
        <div class="card-body p-0">
            {% if tasks|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th width="5%">#</th>
                                <th width="30%">Tarea</th>
                                <th width="20%">Proyecto</th>
                                <th width="15%" class="text-center">Horas</th>
                                <th width="15%" class="text-center">Tarifa/Hora</th>
                                <th width="15%" class="text-center">Valor Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for taskData in tasks %}
                                {% set task = taskData.task %}
                                <tr>
                                    <td class="fw-bold">{{ loop.index }}</td>
                                    <td>
                                        <div>
                                            <strong>{{ task.title|default('Tarea sin tÃ­tulo') }}</strong>
                                            {% if task.description is defined and task.description %}
                                                <br>
                                                <small class="text-muted">
                                                    {{ task.description|slice(0, 60) }}{% if task.description|length > 60 %}...{% endif %}
                                                </small>
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td>
                                        {% if task.project is defined and task.project %}
                                            <span class="badge bg-secondary">{{ task.project.name|default('Sin nombre') }}</span>
                                        {% else %}
                                            <span class="text-muted">Sin proyecto</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        {% if task.hours is defined %}
                                            {{ task.hours|number_format(1) }}
                                        {% else %}
                                            {{ (taskData.total_value / taskData.hourly_rate)|number_format(1) }}
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <span class="fw-bold">${{ taskData.hourly_rate|number_format(2) }}</span>
                                    </td>
                                    <td class="text-center fw-bold text-success">
                                        ${{ taskData.total_value|number_format(2) }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot class="table-dark">
                            <tr>
                                <td colspan="3" class="text-end fw-bold">TOTALES:</td>
                                <td class="text-center fw-bold">{{ total_hours|default(0)|number_format(1) }}</td>
                                <td class="text-center fw-bold">
                                    {% if total_hours > 0 %}
                                        ${{ (total_value / total_hours)|number_format(2) }}
                                    {% else %}
                                        $0.00
                                    {% endif %}
                                </td>
                                <td class="text-center fw-bold">${{ total_value|default(0)|number_format(2) }}</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-clipboard-list fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No hay tareas asignadas</h4>
                    <p class="text-muted">Este usuario no tiene tareas registradas.</p>
                </div>
            {% endif %}
        </div>
        
        <div class="card-footer bg-white">
            <div class="row">
                <div class="col-md-6">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Generado el {{ "now"|date("d/m/Y H:i") }}
                    </small>
                </div>
                <div class="col-md-6 text-end">
                    <a href="{{ path('app_home') }}" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-home me-1"></i> Inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}