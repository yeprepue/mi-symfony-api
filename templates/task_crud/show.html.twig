{% extends 'base.html.twig' %}

{% block title %}Ver Tarea - Time Manager{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header header-gradient">
                    <h3><i class="bi bi-eye"></i> Detalles de la Tarea</h3>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th class="text-muted">ID:</th>
                            <td>{{ task.id }}</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Descripción:</th>
                            <td>{{ task.description }}</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Horas invertidas:</th>
                            <td>{{ task.hoursSpent }}</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Usuario:</th>
                            <td>{{ task.owner.email }}</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Proyecto:</th>
                            <td>{{ task.project.name }}</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Fecha de creación:</th>
                            <td>{{ task.createdAt|date('d/m/Y H:i:s') }}</td>
                        </tr>
                    </table>
                    
                    <div class="mt-4 d-flex justify-content-between">
                        <a href="{{ path('task_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                        <div>
                            <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <form method="post" action="{{ path('task_delete', {'id': task.id}) }}" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                <button type="button" class="btn btn-danger btn-delete-swal" data-item-name="la tarea '{{ task.description|e('html_attr') }}'">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
