{% extends 'base.html.twig' %}

{% block title %}Lista de Tareas - Time Manager{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-check2-square"></i> Lista de Tareas</h1>
        <a href="{{ path('task_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Tarea
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <table class="table table-hover" id="tasksTable">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Descripción</th>
                        <th>Horas</th>
                        <th>Usuario</th>
                        <th>Proyecto</th>
                        <th>Fecha Creación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for task in tasks %}
                        <tr>
                            <td>{{ task.id }}</td>
                            <td>{{ task.description }}</td>
                            <td>{{ task.hoursSpent }}</td>
                            <td>{{ task.owner.email }}</td>
                            <td>{{ task.project.name }}</td>
                            <td>{{ task.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <a href="{{ path('task_show', {'id': task.id}) }}" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" action="{{ path('task_delete', {'id': task.id}) }}" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                    <button type="button" class="btn btn-sm btn-danger btn-delete-swal" data-item-name="la tarea '{{ task.description|e('html_attr') }}'">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center text-muted">No hay tareas registradas</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
