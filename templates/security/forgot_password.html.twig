{% extends 'base.html.twig' %}

{% block title %}Recuperar Contraseña{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Recuperar Contraseña</h3>
                </div>
                <div class="card-body">
                    {% if success %}
                        <div class="alert alert-success">
                            <p>Si el email existe, recibirás un enlace de recuperación.</p>
                            {% if debug_token %}
                                <hr>
                                <p class="mb-0 text-muted"><small>Token de desarrollo: {{ debug_token }}</small></p>
                                <p><a href="{{ path('app_reset_password', {token: debug_token }) }}">Ir directamente al enlace de recuperación</a></p>
                            {% endif %}
                        </div>
                    {% else %}
                        <form method="post">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" name="email" id="email" class="form-control" required autofocus>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Enviar Enlace de Recuperación</button>
                            </div>
                        </form>
                    {% endif %}
                    <div class="text-center mt-3">
                        <a href="{{ path('app_login') }}">Volver a Iniciar Sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
