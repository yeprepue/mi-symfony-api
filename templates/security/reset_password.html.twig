{% extends 'base.html.twig' %}

{% block title %}Restablecer Contraseña{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Restablecer Contraseña</h3>
                </div>
                <div class="card-body">
                    {% if success %}
                        <div class="alert alert-success">
                            <p>Tu contraseña ha sido actualizada exitosamente.</p>
                        </div>
                        <div class="text-center">
                            <a href="{{ path('app_login') }}" class="btn btn-primary">Ir a Iniciar Sesión</a>
                        </div>
                    {% elseif error %}
                        <div class="alert alert-danger">
                            {{ error }}
                        </div>
                        <div class="text-center">
                            <a href="{{ path('app_forgot_password') }}">Solicitar nuevo enlace</a>
                        </div>
                    {% else %}
                        <form method="post">
                            <div class="mb-3">
                                <label for="new_password" class="form-label">Nueva Contraseña</label>
                                <input type="password" name="new_password" id="new_password" class="form-control" required autofocus minlength="8">
                                <small class="text-muted">Mínimo 8 caracteres</small>
                            </div>
                            <div class="mb-3">
                                <label for="confirm_password" class="form-label">Confirmar Contraseña</label>
                                <input type="password" name="confirm_password" id="confirm_password" class="form-control" required>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
                            </div>
                        </form>
                    {% endif %}
                    <div class="text-center mt-3">
                        <a href="{{ path('app_login') }}">Volver a Iniciar Sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
